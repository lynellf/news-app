{
  "name": "electron-react-ssr-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for ssr apps with electron and react",
  "main": "main.js",
  "scripts": {
    "build": "npx webpack --config webpack.prod.js",
    "prod": "concurrently \"node server/main/__main__.js\" \"npx wait-on http://localhost:9000 && npx electron .\"",
    "start": "concurrently \"npx webpack --config webpack.dev.js\" \"npx wait-on server/main/__main__.js && nodemon server/main/__main__.js\" \"npx wait-on http://localhost:9000 && npx electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.2",
    "@types/express": "^4.17.0",
    "@types/jsdom": "^12.2.4",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.0",
    "electron": "^15.5.5",
    "express": "^4.17.1",
    "morgan": "~1.9.1",
    "pug": "^2.0.4",
    "typescript": "^3.3.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "jsdom": "^15.1.1",
    "moz-readability-node": "^0.2.4",
    "newsapi": "^2.4.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
